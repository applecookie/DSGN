.social-network
  list-style none
  margin 0

  display inline-flex
  padding-left .3em

  color $c-primary
  font-size 25px

  &._profile
    color $c-accent-orange
    font-size 12px

  &__item
    margin 0 .05em

    a
      display flex
      align-items center
      justify-content center
      width 1.32em
      height @width

      color inherit
      text-decoration none

      border-radius 50%
      transition $transition

      &:hover
        background-color darken($c-base-bg,5%)
