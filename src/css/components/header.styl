.header
  display flex
  //max-height 500px
  //height @max-height

  &__left
  &__right
    padding-top 3.3%

  &__left
    //1035 : 1500
    flex 1
    //165: 1500
    //padding-left 11%
    padding-left 11.1%

    background-image url("/img/project-banner.jpg")

  &__right
    text-align center

    background-color $c-primary

    &.section__header:after
      background-color $c-primary

  &__nav
    $c-nav = $c-secondary-light
    $nav-toggle-size = 3em
    $nav-burger-height = 3px

    position absolute
    top 0
    right 100%
    bottom @top
    display flex
    align-items center

    background-color $c-nav

    transition inherit
    transform scaleX(0)
    transform-origin 100%

    &-wrap
      // pp only
      //margin-left 7px
      position relative
      display inline-block
      margin-bottom 19.6%

      transition $transition

      &._is-open
        background-color $c-nav

        .header__nav
          transform scaleX(1)

        .header__nav-toggle
          border-color transparent

          &:hover
            background-color darken($c-nav,5%)

          span
            height 0

            &:before
              transform translateY(0) rotate(45deg)
            &:after
              transform translateY(0) rotate(-45deg)


    &-item
      display flex
      align-items center
      justify-content center
      height 100%
      min-width 120px

      color $c-text-white
      font-family 'Roboto', sans-serif
      font-size 14px
      letter-spacing -.8px
      text-decoration none
      text-transform uppercase

      transition $transition

      &:hover
        background-color darken($c-nav, 5%)

    &-toggle
      display block
      position relative
      z-index 1
      width "calc(%s + %s*2)" % ($nav-toggle-size $nav-burger-height)
      height $nav-toggle-size
      border $nav-burger-height solid $c-text-white
      padding 0

      font-size 40px
      line-height 1

      background-color transparent

      transition $transition
      cursor pointer
      outline none

      &:active
      &:hover
        background-color rgba($c-text,5%)

      span
        position absolute
        top 50%
        left @top
        display block
        height $nav-burger-height
        width 1em

        background-color $c-text-white
        transform translate3d(-50%, -50%, 0)
        transition inherit

        &:before
        &:after
          content ''
          display block
          position absolute
          height $nav-burger-height
          width inherit

          background-color inherit

          transition inherit

        &:before
          transform translateY(calc(-100% - 4px))

        &:after
          transform translateY(calc(100% + 4px))

  &__contacts
    padding-left 13%

    :last-child
      padding-left 5.8em
