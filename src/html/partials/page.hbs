<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{{ nav }} - SiteConveyer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <div class="content">
        <aside class="left-menu">
            <ul class="menu">
                {{#each @root.common.nav}}
                    <li>
                        {{#equals ../nav title}}
                            <span>{{title}}</span>
                            {{#if ../menu}}
                                <ul class="menu">
                                    {{#each ../menu}}
                                        <li><a href="#{{id}}">{{title}}</a></li>
                                    {{/each}}
                                </ul>
                            {{/if}}
                        {{else}}
                            {{#if disabled}}
                                <span class="disabled">{{title}}</span>
                            {{else}}
                                <a href="{{page}}.html">{{title}}</a>
                            {{/if}}
                        {{/equals}}
                    </li>
                {{/each}}
            </ul>
        </aside>

        <main class="container" role="main">
            <div class="page-title">{{ title }}</div>

            {{> @partial-block}}
        </main>
    </div>

    <script src="js/main.js"></script>
</body>
</html>
